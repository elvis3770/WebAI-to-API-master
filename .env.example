# ============================================
# WebAI-to-API Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# --- Application Settings ---
ENVIRONMENT=development
# Options: development, production

# --- Server Configuration ---
HOST=localhost
PORT=6969

# --- Security ---
# Generate secure API keys (min 32 characters)
# Multiple keys separated by commas
# Example: API_KEYS=key1_abc123...,key2_def456...
API_KEYS=your-secret-api-key-here-min-32-chars

# --- CORS Configuration ---
# Allowed origins for CORS (comma-separated)
# Use * for development only, restrict in production
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
# For development: ALLOWED_ORIGINS=*

# --- Rate Limiting ---
# Requests per minute per IP/API key
RATE_LIMIT_PER_MINUTE=60
# Enable/disable rate limiting
RATE_LIMIT_ENABLED=true

# --- Gemini Configuration ---
# Get these cookies from your browser after logging into Gemini
# Leave empty to auto-retrieve from browser
GEMINI_COOKIE_1PSID=
GEMINI_COOKIE_1PSIDTS=

# Default Gemini model
# Options: gemini-1.5-flash, gemini-2.0-flash, gemini-2.5-pro, etc.
GEMINI_DEFAULT_MODEL=gemini-2.0-flash

# --- Proxy Configuration ---
# Optional HTTP proxy for Gemini connections
# Useful for fixing 403 errors or restricted connections
# Example: HTTP_PROXY=http://127.0.0.1:2334
HTTP_PROXY=

# --- Browser Settings ---
# Browser to use for cookie retrieval
# Options: chrome, firefox, brave, edge, safari
BROWSER_NAME=chrome

# --- Logging Configuration ---
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
# Log format: json (for production) or console (for development)
LOG_FORMAT=console
# Enable log file rotation
LOG_FILE_ENABLED=false
LOG_FILE_PATH=logs/webai.log

# --- Cookie Management ---
# Auto-refresh cookies every N hours
COOKIE_REFRESH_INTERVAL_HOURS=12
# Enable auto-refresh
COOKIE_AUTO_REFRESH=true

# --- Advanced Settings ---
# Enable streaming responses
STREAMING_ENABLED=true
# Enable metrics endpoint
METRICS_ENABLED=true
# Enable detailed error messages (disable in production)
DEBUG_MODE=true
